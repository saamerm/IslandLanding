<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IslandLanding.Views.TutorialPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#242424">
    <ContentPage.Content>
    <Grid >
      <Image Source="background" 
             Aspect="Fill"/>

      <CarouselView     Margin="0,175,0,30"
                        x:Name="carousel"
                         Position="{Binding CurrentPosition}"
                   PositionChangedCommand="{Binding PositionChangedCommand}"
              PositionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=Position}"
                        ItemsSource="{Binding TutorialList}">
        <CarouselView.ItemTemplate>
          <DataTemplate>
            <StackLayout>
              <Label Text="{Binding .}"
                   Margin="20,0"
                     FontSize="22"
                      FontFamily="PatrickFont"
                     VerticalTextAlignment="Center"
                     TextColor="White"
                     />
            
            </StackLayout>
          </DataTemplate>
        </CarouselView.ItemTemplate>
        
      </CarouselView>
      <Button VerticalOptions="End" IsVisible="{Binding IsNext}"
              WidthRequest="300"
              Text="{Binding ButtonText}"
              Margin="40,0,40,100"
              TextColor="White"
              BorderColor="{StaticResource bordercolor}"
              BorderWidth="2" 
              HeightRequest="60"
              CornerRadius="30"
                Command="{Binding NextCommand}"
            CommandParameter="{Binding Source={x:Reference carousel},Path=Position}"
              BackgroundColor="{StaticResource orange}"
           
              />
      <Button VerticalOptions="End" IsVisible="{Binding IsPlaying}"
              WidthRequest="300"
              Text="{Binding ButtonText}"
              Margin="40,0,40,100"
              TextColor="White"
              BorderColor="{StaticResource bordercolor}"
              BorderWidth="2" 
              HeightRequest="60"
              CornerRadius="30"
                Command="{Binding PlayCommand}"
            CommandParameter="{Binding Source={x:Reference carousel},Path=Position}"
              BackgroundColor="{StaticResource orange}"
           
              />
    </Grid>
  </ContentPage.Content>
</ContentPage>