<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
  xmlns:pages="http://rotorgames.com" 
   xmlns="http://xamarin.com/schemas/2014/forms"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms" 
  xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
  x:Class="IslandLanding.Views.NextPopupPage"
  CloseWhenBackgroundIsClicked="True">
  <AbsoluteLayout >
    <pancake:PancakeView BackgroundColor="#898989"
                                    AbsoluteLayout.LayoutFlags="PositionProportional,SizeProportional"
                                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                                     VerticalOptions="FillAndExpand"
                                     Opacity="0.3"/>


    <AbsoluteLayout  AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                                     AbsoluteLayout.LayoutBounds="0.5,0.75,0.8,0.5" Margin="30,0"
                                                x:Name="item"   >
      <pancake:PancakeView AbsoluteLayout.LayoutBounds="0,0,1,0.5"
                                         BackgroundColor="White"
                                                         AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional,HeightProportional"
                                                                CornerRadius="10"
                                   >
        <StackLayout   Margin="0,50,0,0">
          <Label Text="{Binding Seconds}"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                    FontFamily="PatrickFont"
                   FontSize="28"/>
       
            <Button Text="{Binding ButtonText}"
                      WidthRequest="204"
                      HeightRequest="40"
                      CornerRadius="10"
                      TextColor="White"
                   HorizontalOptions="Center"
                    Margin="0,10,0,0"
                    Command="{Binding NextCommand}"
                      BackgroundColor="{StaticResource orange}"/>
          

        </StackLayout>

      </pancake:PancakeView>

      <forms:AnimationView   AbsoluteLayout.LayoutBounds="0.5,-0.40,140,140"
                                                         AbsoluteLayout.LayoutFlags="XProportional,YProportional"
          Animation="Resources.wins.json"
          AnimationSource="EmbeddedResource"
          AutoPlay="True"
          HeightRequest="257"
          WidthRequest="257"
          RepeatMode="Infinite"
          VerticalOptions="Center"
          HorizontalOptions="Center" />
    </AbsoluteLayout>

  </AbsoluteLayout>
</pages:PopupPage>