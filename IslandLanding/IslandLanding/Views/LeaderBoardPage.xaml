                       FontFamily="PatrickFont"
                       VerticalTextAlignment="Center"/>
                <Line Grid.ColumnSpan="5"
                      BackgroundColor="Black"
                      Margin="-5,0,0,0"
                      VerticalOptions="EndAndExpand"
                      HeightRequest="10"/>
              </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
              <DataTemplate>
                <Grid>
                  <Grid   BackgroundColor="{Binding BackgroundColor}"
                        HeightRequest="51"
                        ColumnDefinitions="0.2*,2,0.4*,2,0.2*">
                    <Label Text="{Binding Rank}" 
                       Padding="10"
                       FontSize="20"
                       Grid.Column="0"
                       TextColor="Black"
                        FontFamily="PatrickFont"
                       VerticalTextAlignment="Center"/>
                    <Line WidthRequest="1"
                      HeightRequest="20"
                      Grid.Column="1"
                      BackgroundColor="Black"
                      />
                    <Label Text="{Binding Name}"
                       Grid.Column="2"
                        FontSize="20"
                       Padding="10"
                        TextColor="Black"
                        FontFamily="PatrickFont"
                        VerticalTextAlignment="Center"/>
                    <Line WidthRequest="1"
                      HeightRequest="20"
                      Grid.Column="3"
                      BackgroundColor="Black"
                      />
                    <Label Text="{Binding Time}"
                       Grid.Column="4"
                       FontSize="20"
                       Padding="10"
                       TextColor="Black"
                       FontFamily="PatrickFont"
                       VerticalTextAlignment="Center"/>
                  </Grid>
                </Grid>
              </DataTemplate>
            </CollectionView.ItemTemplate>
          </CollectionView>
          <!--hard-->
          <CollectionView ItemsSource="{Binding BoardList}"
                      >
            <CollectionView.ItemsLayout>
              <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.Header>
              <Grid BackgroundColor="{StaticResource orange}" 
                    HeightRequest="60"
                    ColumnDefinitions="0.2*,2,0.4*,2,0.2*">
                <Label Text="Rank" 
                       Padding="10"
                       FontSize="20"
                       Grid.Column="0"
                       TextColor="Black"
                        FontFamily="PatrickFont"
                       VerticalTextAlignment="Center"/>
                <Line WidthRequest="1"
                      HeightRequest="20"
                      Grid.Column="1"
                      BackgroundColor="Black"
                      />
                <Label Text="Name"
                       Grid.Column="2"
                        FontSize="20"
                       Padding="10"
                        TextColor="Black"
                        FontFamily="PatrickFont"
                        VerticalTextAlignment="Center"/>
                <Line WidthRequest="1"
                      HeightRequest="20"
                      Grid.Column="3"
                      BackgroundColor="Black"
                      />
                <Label Text="Time"
                       Grid.Column="4"
                       FontSize="20"
                       Padding="10"
                       TextColor="Black"
                       FontFamily="PatrickFont"
                       VerticalTextAlignment="Center"/>
                <Line Grid.ColumnSpan="5"
                      BackgroundColor="Black"
                      Margin="-5,0,0,0"
                      VerticalOptions="EndAndExpand"
                      HeightRequest="10"/>
              </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
              <DataTemplate>
                <Grid>
                  <Grid   BackgroundColor="{Binding BackgroundColor}"
                        HeightRequest="51"
                        ColumnDefinitions="0.2*,2,0.4*,2,0.2*">
                    <Label Text="{Binding Rank}" 
                       Padding="10"
                       FontSize="20"
                       Grid.Column="0"
                       TextColor="Black"
                        FontFamily="PatrickFont"
                       VerticalTextAlignment="Center"/>
                    <Line WidthRequest="1"
                      HeightRequest="20"
                      Grid.Column="1"
                      BackgroundColor="Black"
                      />
                    <Label Text="{Binding Name}"
                       Grid.Column="2"
                        FontSize="20"
                       Padding="10"
                        TextColor="Black"
                        FontFamily="PatrickFont"
                        VerticalTextAlignment="Center"/>
                    <Line WidthRequest="1"
                      HeightRequest="20"
                      Grid.Column="3"
                      BackgroundColor="Black"
                      />
                    <Label Text="{Binding Time}"
                       Grid.Column="4"
                       FontSize="20"
                       Padding="10"
                       TextColor="Black"
                       FontFamily="PatrickFont"
                       VerticalTextAlignment="Center"/>
                  </Grid>
                </Grid>
              </DataTemplate>
            </CollectionView.ItemTemplate>
          </CollectionView>
        </tabs:ViewSwitcher>
      </StackLayout>
    </Grid>
  </ContentPage.Content>
</ContentPage>